<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lose"
    tools:context="cs301.cs.wm.edu.jundaan.gui.WinningActivity">

    <TextView
        android:id="@+id/youlost"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginStart="120dp"
        android:layout_marginTop="50dp"
        android:text="Mission Failed!"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:visibility="visible"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/sorry"
        android:layout_width= "wrap_content"
        android:layout_height="35dp"
        android:layout_marginEnd="130dp"
        android:layout_marginStart="130dp"
        android:layout_marginTop="50dp"
        android:text="Sorry!"
        android:textAppearance="@android:style/TextAppearance.Large"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/youlost" />

    <TextView
        android:id="@+id/energyCon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/sorry"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/pathLength"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/energyCon"
        app:layout_constraintStart_toStartOf="parent"/>

    <TextView
        android:id="@+id/shortestPath"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="65dp"
        android:layout_marginTop="50dp"
        android:visibility="visible"
        app:layout_constraintTop_toBottomOf="@id/pathLength"
        app:layout_constraintStart_toStartOf="parent"/>



</android.support.constraint.ConstraintLayout>